{
    "version": "1.2.198.0",
    "description": "SDK for new generation graphics and compute API",
    "homepage": "https://www.vulkan.org",
    "license": {
        "identifier": "MIT,...",
        "url": "https://vulkan.lunarg.com/license/#/license"
    },
    "notes": [
        "Make sure you have the vulkan driver installed.",
        "Variety of drivers of different graphic card vendors could be found at the bottom of 'https://www.khronos.org/vulkan/'"
    ],
    "url": "https://sdk.lunarg.com/sdk/download/1.2.198.0/windows/VulkanSDK-1.2.198.0-Installer.exe#/dl.7z",
    "hash": "43ef1f8362f827c6db0d5aceb70652835180ceded9183a3a1103e5e2c8e58b50",
    "pre_install": "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstal*\" -Recurse",
    "env_add_path": [
        "Bin",
        "Tools"
    ],
    "env_set": {
        "VULKAN_SDK": "$dir",
        "VK_SDK_PATH": "$dir"
    },
    "post_install": [
        "$reg_location=\"HKCU:\\SOFTWARE\\Khronos\\Vulkan\\ExplicitLayers\"",
        "if ($global) { $reg_location=\"HKLM:\\SOFTWARE\\Khronos\\Vulkan\\ExplicitLayers\" }",
        "if (Test-Path \"$reg_location\") { Remove-Item -Path \"$reg_location\" -Force }",
        "New-Item -Path \"$reg_location\" -Force",
        "Get-ChildItem -Path \"$dir\\Bin\" -Filter VkLayer_*.json -File -Name | ForEach-Object {",
        "    New-ItemProperty -Path \"$reg_location\" -Name \"$dir\\Bin\\$_\" -PropertyType \"DWORD\" -Value \"0\"",
        "}"
    ],
    "uninstaller": {
        "script": [
            "$reg_location=\"HKCU:\\SOFTWARE\\Khronos\\Vulkan\\ExplicitLayers\"",
            "if ($global) { $reg_location=\"HKLM:\\SOFTWARE\\Khronos\\Vulkan\\ExplicitLayers\" }",
            "if (Test-Path \"$reg_location\") { Remove-Item -Path \"$reg_location\" -Force }"
        ]
    },
    "checkver": {
        "url": "https://vulkan.lunarg.com/sdk/latest/windows.json",
        "jsonpath": "$.windows"
    },
    "autoupdate": {
        "url": "https://sdk.lunarg.com/sdk/download/$version/windows/VulkanSDK-$version-Installer.exe#/dl.7z",
        "hash": {
            "url": "https://vulkan.lunarg.com/sdk/files.json",
            "jsonpath": "$.windows['$version'].files[?(@.file_name == '$basename')].sha"
        }
    }
}